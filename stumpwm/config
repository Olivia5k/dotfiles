(defcommand run-or-raise-spotify () ()
  (run-or-raise "spotify" '(:class "Spotify") T T))

(defcommand emacs () ()
  (run-shell-command *emacs*))

(defmacro emacs? (name key stump-func) ()
  "Define a binding that runs a StumpWM function or sends the keys to emacs."
  `(progn
     (defcommand ,(concat "emacs/" name) () ()
       (eval-command command))
     (define-key *top-map* (kbd ,key) ,name)))

