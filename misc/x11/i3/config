focus_follows_mouse yes

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.local/share/i3/ipc.sock

bar {
    status_command goblocks
    colors {
        background #1F111F
        statusline #C197A6
                           #border #bg     #text
        focused_workspace  #702c70 #702c70 #ffffff
        active_workspace   #362836 #362836 #ffffff
        inactive_workspace #332033 #332033 #886088
        urgent_workspace   #900000 #900000 #ffffff
    }
}


# class                 border  backgr. text    indicator
client.focused          #902090 #702c70 #ffffff #f299c7
client.focused_inactive #443644 #554055 #ffffff #85546d
client.unfocused        #332033 #221522 #aaaaaa #292d2e
client.urgent           #2f343a #900000 #ffffff #900000

client.background       #ffffff

