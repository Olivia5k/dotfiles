font pango: iosevka 16px

# for_window [class="^Spotify$"] move container to workspace spotify; workspace spotify
for_window [class="Gimp"] move container to workspace gimp; workspace gimp
for_window [class="Kodi"] move container to workspace kodi; workspace kodi
for_window [class=".*steam.*"] move container to workspace steam; workspace steam

# Assigning
assign [class="float"] ~

# Focus (Mod4+hjkl)
bindsym Mod4+h focus left
bindsym Mod4+j focus down
bindsym Mod4+k focus up
bindsym Mod4+l focus right

# Switching workspaces
# These are technically inverted, but the original felt... off.
bindsym Mod4+p workspace next
bindsym Mod4+n workspace prev

# Switching displays
bindsym Mod4+Mod1+z split v

# Killing
bindcode Mod4+9 kill
bindsym --release button2 kill

# Splitting
bindsym Control+Mod4+Mod1+h move workspace to output left
bindsym Control+Mod4+Mod1+l move workspace to output right

# Fullscreening
bindsym Mod4+Mod1+f fullscreen
bindcode Mod4+23 fullscreen

# Resizing (Mod4+Alt+hjkl)
bindsym Mod4+Mod1+h resize shrink width 10 px or 3 ppt
bindsym Mod4+Mod1+j resize shrink height 10 px or 3 ppt
bindsym Mod4+Mod1+k resize grow height 10 px or 3 ppt
bindsym Mod4+Mod1+l resize grow width 10 px or 3 ppt

# Move (Mod4+Shift+hjkl)
bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+k move up
bindsym Mod4+Shift+l move right

# Workspace layouts (Mod4+F9-F11)
bindcode Mod4+75 layout tabbed
bindcode Mod4+76 layout default
bindcode Mod4+77 layout stacking

# Workspace manipulation
bindsym Mod4+w exec dmenu_i3_workspace workspace "i3-msg workspace %q"
bindsym Mod4+Shift+w exec dmenu_i3_workspace move-to "i3-msg move container to workspace %q" true

# Dedicated workspaces
bindsym Mod4+Control+j exec i3-or-raise "jira" "www https://jira.spotify.net"
bindsym Mod4+Control+c exec i3-or-raise "cal" "www https://calendar.google.com/calendar/b/1/render#main_7"
bindsym Mod4+Mod1+c exec i3-or-raise "chill" "mux chill"
bindsym Mod4+d workspace code; workspace dev
bindsym Mod4+e exec i3-or-raise "slack" "chrome-app https://spotify.slack.com/messages/ladies/"
bindsym Mod4+f exec i3-or-raise "facebook" "www https://facebook.com"
bindsym Mod4+g exec i3-or-raise "ghe" "www https://ghe.spotify.net"
bindsym Mod4+Control+g exec i3-or-raise "github" "www https://github.com"
bindsym Mod4+i exec mor irc
bindsym Mod4+Mod1+p exec ror "bin/payments-docker" "payments-docker" "urxvt -name payments-docker -e payments-docker"
bindsym Mod4+r exec i3-or-raise "reddit" "www https://reddit.com"
bindsym Mod4+s exec i3-or-raise "spotify" "launch-spotify"
bindsym Mod4+Mod1+Control+s exec i3-or-raise "sl" "www http://sl.se"
bindsym Mod4+t exec i3-or-raise "tam" "launch-tam"
bindsym Mod4+Mod1+t exec i3-or-raise "tvtropes" "www tvtropes.org"
bindsym Mod4+m exec i3-or-raise "messenger" "chrome-app https://messenger.com"
bindsym Mod4+Mod1+m exec i3-or-raise "mail" "chrome-app https://inbox.google.com"
bindsym Mod4+Control+s exec i3-or-raise "steam" "steam"
bindsym Mod4+q exec i3-or-raise "www" "browser"

# Org buffer in the scratchpad
bindsym Mod4+a scratchpad show
bindsym Mod4+Mod1+a exec emacsclient -c -a '' ~/org/payments.org
bindsym Mod4+Control+a move scratchpad


# Applications
bindcode Mod4+36 exec i3-mor
bindcode Mod4+Mod1+36 exec browser
bindcode Mod4+Mod1+Control+36 exec urxvt
bindcode Mod4+65 exec dmenu_www
bindcode Mod4+Control+65 exec dmenu_exec

bindsym Mod4+Mod1+d exec emacsclient -c -a ''

# bindsym Mod4+i exec mor main `di
bindsym Mod4+Mod1+Control+d exec emacs-daemon

# Locking and switching
bindcode Mod4+22 exec lock
# bindcode Mod4+22 exec sswitch
bindcode Mod4+Mod1+22 exec sswitch
bindcode Mod4+Mod1+Control+22 exec susp
bindsym Mod4+Control+p exec passmenu
bindsym Mod4+Control+n exec n

# Backlight
bindsym Mod4+Mod1+1 exec xbacklight -set 10
bindsym Mod4+Mod1+2 exec xbacklight -set 20
bindsym Mod4+Mod1+3 exec xbacklight -set 30
bindsym Mod4+Mod1+4 exec xbacklight -set 40
bindsym Mod4+Mod1+5 exec xbacklight -set 50
bindsym Mod4+Mod1+6 exec xbacklight -set 60
bindsym Mod4+Mod1+7 exec xbacklight -set 70
bindsym Mod4+Mod1+8 exec xbacklight -set 80
bindsym Mod4+Mod1+9 exec xbacklight -set 90

# Volume control
bindsym Mod4+x exec vol down
bindsym Mod4+c exec vol up
bindsym Mod4+z exec vol mute

# i3 control
bindsym Mod4+Control+k kill
bindsym Mod4+Control+F12 exit
bindsym Mod4+Control+r reload
bindsym Mod4+Mod1+Control+r restart

focus_follows_mouse yes

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.local/share/i3/ipc.sock

bar {
    status_command i3status
    colors {
        background #332833
        statusline #ffccff
                           #border #bg     #text
        focused_workspace  #bf60bf #702c70 #ffffff
        active_workspace   #362836 #362836 #ffffff
        inactive_workspace #222922 #151515 #886088
        urgent_workspace   #ff0000 #900000 #ffffff
    }
}


# class                 border  backgr. text    indicator
client.focused          #902090 #702c70 #ffffff #f299c7
client.focused_inactive #443644 #554055 #ffffff #85546d
client.unfocused        #332033 #221522 #aaaaaa #292d2e
client.urgent           #2f343a #900000 #ffffff #900000

client.background       #ffffff

# no borders plx
new_window pixel 5
workspace_layout default

exec maybe_kodi
