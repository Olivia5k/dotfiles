font pango: Yanone kaffeesatz 20px

for_window [class="Gimp"] move container to workspace gimp; workspace gimp
for_window [class=".*steam.*"] move container to workspace steam; workspace steam

# Assigning
assign [class="float"] ~

# Focus (Mod4+hjkl)
bindsym Mod4+h exec i3emacs "focus left" "super+h"
bindsym Mod4+j exec i3emacs "focus down" "super+j"
bindsym Mod4+k exec i3emacs "focus up" "super+k"
bindsym Mod4+l exec i3emacs "focus right" "super+l"

# Workspaces to screens
workspace www output DVI-I-1
workspace code output DVI-I-1
workspace inbox output DVI-I-1
workspace spotify output DVI-D-0
workspace dev output DVI-D-0
workspace messenger output DVI-D-0
workspace steam output DVI-D-0
workspace gimp output DVI-D-0
workspace nordea output DVI-D-0
workspace xxx output DVI-D-0

# Switching workspaces
# These are technically inverted, but the original felt... off.
bindsym Mod4+p workspace next
bindsym Mod4+n workspace prev

# Switching displays
bindsym Mod4+Mod1+z split v

# Killing
bindcode Mod4+9 kill
bindsym --release button2 kill

# Splitting
bindsym Control+Mod4+Mod1+h move workspace to output left
bindsym Control+Mod4+Mod1+l move workspace to output right

# Fullscreening
bindsym Mod4+Mod1+f fullscreen
bindcode Mod4+23 fullscreen

# Resizing (Mod4+Alt+hjkl)
bindsym Mod4+Mod1+h resize shrink width 10 px or 3 ppt
bindsym Mod4+Mod1+j resize shrink height 10 px or 3 ppt
bindsym Mod4+Mod1+k resize grow height 10 px or 3 ppt
bindsym Mod4+Mod1+l resize grow width 10 px or 3 ppt

# Move (Mod4+Shift+hjkl)
bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+k move up
bindsym Mod4+Shift+l move right

# Screen layouts (Mod4+F5-F8)
bindcode Mod4+71 exec sswitch laptop
bindcode Mod4+72 exec sswitch work
bindcode Mod4+73 exec sswitch desktop
bindcode Mod4+74 exec sswitch tv

# Workspace layouts (Mod4+F9-F11)
bindcode Mod4+75 layout tabbed
bindcode Mod4+76 layout default
bindcode Mod4+77 layout stacking

# Workspace manipulation
bindsym Mod4+w exec dmenu_i3_workspace workspace "i3-msg workspace %q"
bindsym Mod4+Shift+w exec dmenu_i3_workspace move-to "i3-msg move container to workspace %q" true

# Dedicated workspaces
bindsym Mod4+Control+c exec i3-or-raise "cal" "chrome-app https://calendar.google.com/"
bindsym Mod4+d workspace code; workspace dev
bindsym Mod4+Mod1+d exec "emacsclient --create-frame ~/git/dotfiles/emacs.d/init.el"
bindsym Mod4+Control+Mod1+d exec "emacs --daemon"
bindsym Mod4+f exec i3-or-raise "facebook" "chrome-app https://facebook.com"
bindsym Mod4+g exec i3-or-raise "github" "chromium --new-window https://github.com"
bindsym Mod4+i exec i3-or-raise "inbox" "chrome-app https://inbox.google.com"
bindsym Mod4+r exec i3-or-raise "reddit" "chromium --new-window https://reddit.com"
bindsym Mod4+s exec i3-or-raise "spotify" "launch-spotify"
bindsym Mod4+Mod1+Control+s exec i3-or-raise "sl" "sl"
bindsym Mod4+Mod1+Control+n exec i3-or-raise "nordea" "chrome-app https://internetbanken.privat.nordea.se/nsp/login"
bindsym Mod4+t exec i3-or-raise "tvtropes" "chrome-app tvtropes.org"
bindsym Mod4+Mod1+t exec i3-or-raise "tam" "launch-tam"
bindsym Mod4+m exec i3-or-raise "messenger" "chrome-app https://messenger.com"
bindsym Mod4+Mod1+m exec "chrome-app https://messenger.com"
bindsym Mod4+Control+s exec i3-or-raise "steam" "steam"
bindsym Mod4+q exec i3-or-raise "www" "browser"
bindsym Mod4+Control+Mod1+x exec i3-or-raise "xxx" "chromium --new-window https://reddit.com/me/m/nsfw/"

