font pango: inconsolata 16px

for_window [class="^Spotify$"] move container to workspace spotify; workspace spotify
for_window [class="Gimp"] move container to workspace gimp; workspace gimp

# Assigning
assign [class="float"] ~

# Focus (Mod4+hjkl)
bindsym Mod4+h focus left
bindsym Mod4+j focus down
bindsym Mod4+k focus up
bindsym Mod4+l focus right

# Splitting
bindsym Mod4+Mod1+z split v
bindsym Mod4+Mod1+s split h

# Fullscreening
bindsym Mod4+Mod1+f fullscreen
bindcode Mod4+23 fullscreen

# Resizing (Mod4+Alt+hjkl)
bindsym Mod4+Mod1+h resize shrink width 10 px or 3 ppt
bindsym Mod4+Mod1+j resize shrink height 10 px or 3 ppt
bindsym Mod4+Mod1+k resize grow height 10 px or 3 ppt
bindsym Mod4+Mod1+l resize grow width 10 px or 3 ppt

# Move (Mod4+Shift+hjkl)
bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+k move up
bindsym Mod4+Shift+l move right

# Workspace layouts (Mod4+F9-F11)
bindcode Mod4+75 layout tabbed
bindcode Mod4+76 layout default
bindcode Mod4+77 layout stacking

# Windows
bindsym Mod4+q workspace www
bindsym Mod4+w workspace org
bindsym Mod4+e workspace misc
bindsym Mod4+r workspace spotify
bindsym Mod4+a workspace tmux
bindsym Mod4+s workspace social
bindsym Mod4+d workspace emacs

# Moving windows
bindsym Mod4+Shift+q move container to workspace www
bindsym Mod4+Shift+w move container to workspace org
bindsym Mod4+Shift+e move container to workspace misc
bindsym Mod4+Shift+r move container to workspace spotify
bindsym Mod4+Shift+a move container to workspace tmux
bindsym Mod4+Shift+s move container to workspace social
bindsym Mod4+Shift+d move container to workspace emacs

# Applications
bindcode Mod4+36 exec mor main
bindcode Mod4+Mod1+36 exec muxwin
bindcode Mod4+Mod1+Control+36 exec urxvt
bindcode Mod4+65 exec dmenu_exec -z
bindsym Mod4+Mod1+d exec urxvt -e emacsclient -nw
bindsym Mod4+Mod1+w exec urxvt -e emacsclient -nw ~/org/payments.org
bindsym Mod4+c exec chromium-browser

# Locking and switching
bindcode Mod4+22 exec i3lock -d -c 333333
bindcode Mod4+Mod1+22 exec sswitch

# Backlight
bindsym Mod4+Mod1+1 exec xbacklight -set 10
bindsym Mod4+Mod1+2 exec xbacklight -set 20
bindsym Mod4+Mod1+3 exec xbacklight -set 30
bindsym Mod4+Mod1+4 exec xbacklight -set 40
bindsym Mod4+Mod1+5 exec xbacklight -set 50
bindsym Mod4+Mod1+6 exec xbacklight -set 60
bindsym Mod4+Mod1+7 exec xbacklight -set 70
bindsym Mod4+Mod1+8 exec xbacklight -set 80
bindsym Mod4+Mod1+9 exec xbacklight -set 90

bindsym Mod4+p exec passmenu
bindsym Mod4+Control+k kill

bindsym Mod4+Control+e exit
bindsym Mod4+Control+r reload
bindsym Mod4+Mod1+Control+r restart

# Haha, no.
focus_follows_mouse no

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.local/share/i3/ipc.sock

bar {
    status_command i3status
    colors {
        background #333333
        statusline #dbdbdb
                           #border #bg     #text
        focused_workspace  #9dbf60 #45702c #bde6bd
        active_workspace   #282828 #282828 #ffffff
        inactive_workspace #222922 #151515 #608860
        urgent_workspace   #2f343a #900000 #ffffff
    }
}

# no borders plx
new_window pixel 2
workspace_layout default
