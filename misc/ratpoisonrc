# Ratpoison configuration by Lowe Thiderman (daethorian@ninjaloot.se)
# Licensed under the WTFPL.

# Ratpoison internals
# Options and initializing {
	startup_message off
	set winname title
	set font terminus-14
	set bgcolor #101010
	set fgcolor #db2222
	set waitcursor 0
	gravity nw

	# Borders!
	set border 2
	set fwcolor #db2222
	set bwcolor #151515
	set padding 0 18 0 0
# }
# Inbound bindings {
	escape C-q
	#escape s-space

	bind h focusleft
	bind j focusdown
	bind k focusup
	bind l focusright

	bind H exchangeleft
	bind J exchangedown
	bind K exchangeup
	bind L exchangeright

	bind s hsplit
	bind z vsplit

	bind Return exec urxvt
# }

# Outbound (Win-key) bindings follow
# Management {
	definekey top s-M-j next
	definekey top s-M-k prev
	definekey top s-w windows

	definekey top s-h focusleft
	definekey top s-j focusdown
	definekey top s-k focusup
	definekey top s-l focusright

	definekey top s-H exchangeleft
	definekey top s-J exchangedown
	definekey top s-K exchangeup
	definekey top s-L exchangeright

	definekey top s-C-s hsplit
	definekey top s-C-z vsplit

	definekey top s-r resize

	# Kill window
	definekey top s-Escape delete
	# Kill frame
	definekey top s-M-Escape remove
# }
# Selecting {
	definekey top s-1 select 0
	definekey top s-2 select 1
	definekey top s-3 select 2
	definekey top s-4 select 3
	definekey top s-5 select 4
	definekey top s-6 select 5
	definekey top s-7 select 6
	definekey top s-8 select 7
	definekey top s-9 select 8
	definekey top s-0 select 9
# }
# Switching select numbers {
	definekey top s-M-1 number 0
	definekey top s-M-2 number 1
	definekey top s-M-3 number 2
	definekey top s-M-4 number 3
	definekey top s-M-5 number 4
	definekey top s-M-6 number 5
	definekey top s-M-7 number 6
	definekey top s-M-8 number 7
	definekey top s-M-9 number 8
	definekey top s-M-0 number 9
# }
# MPD \o/ {
	definekey top s-a exec mpc prev
	definekey top s-s exec mpc toggle
	definekey top s-d exec mpc next
# }
# mocp :/ {
	definekey top s-M-a exec mocp -r
	definekey top s-M-s exec mocp -G
	definekey top s-M-d exec mocp -f
# }
# Volume {
	definekey top s-z exec amixer set 'Master' toggle
	definekey top s-x exec amixer set 'PCM' 5%-
	definekey top s-c exec amixer set 'PCM' 5%+
# }
# Terminals {
	definekey top s-Return exec urxvt
	definekey top s-n exec urxvt -e ssh ninjaloot.se
	definekey top s-M-Return exec urxvt -name smallfont
# }
# Handling and others {
	definekey top s-BackSpace exec touch /home/daethorian/.cache/dzen/force
	definekey top s-F12 source /home/daethorian/.config/ratpoison/ratpoisonrc
	definekey top s-C-F12 restart

	definekey top s-p exec ss
	definekey top s-u exec uzbl-browser
	definekey top s-C-u colon exec uzbl-browser http://
	definekey top s-M-u exec uzbl-browser http://localhost:8000
# }
