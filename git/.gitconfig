[user]
  email = lowe.thiderman@gmail.com
  name = Lowe Thiderman
[color]
  ui = auto

[color "diff"]
  plain = normal
  meta = bold
  frag = cyan
  old = bold red
  new = bold green
  commit = bold yellow
  whitespace = normal red
[color "branch"]
  current = bold green
  local = normal
  remote = bold red
  plain = normal
[color "status"]
  header = normal
  added = cyan
  updated = bold green
  changed = bold red
  untracked = bold magenta
  nobranch = bold red
[color "grep"]
  match = bold magenta
[color "interactive"]
  prompt = normal
  header = normal
  help = yellow
  error = bold red

[core]
  editor = emacsclient -nw
  excludesfile = ~/.cvsignore
[alias]
  st          = status
  ci          = commit
  ca          = commit --amend
  br          = branch -avv
  co          = checkout
  who         = shortlog -s --
  pr          = pull-request
  lg          = log --abbrev-commit --decorate --date=relative --format=format:'%C(bold 239)%h%C(reset) %C(bold 103)%an%C(reset)%C(auto)%d%C(reset) %s%C(reset) %C(bold black)(%ar)%C(reset) '
  lgg         = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold 239)%h%C(reset) %C(bold 103)%an%C(reset)%C(auto)%d%C(reset) %s%C(reset) %C(bold black)(%ar)%C(reset) '
  lgc         = log ORIG_HEAD.. --stat --no-merges
  lgp         = log --pretty=format:'%Cred%h%Creset -- %cn, %cr\t%Cgreen%s%Creset'
  staged      = diff --cached
  wdiff       = diff --color-words
  ignored     = ls-files --others
  oneline     = log --oneline --decorate
  changes     = diff --name-status -r
  wdiff       = diff --color-words
  wlog        = log -p --word-diff=color
  mnc         = merge --no-commit
  tags        = for-each-ref --sort='*authordate' --format='%(tag)' refs/tags
  unpushed    = cherry -v
  whatrelease = name-rev --name-only
  contains    = branch --contains
  repourl     = config --get remote.origin.url
  undo        = reset --soft HEAD^
  shallow     = clone --depth=1

  # Stuff longer than 80 chars; put in separate scripts in ~/.git_template
  authors     = !.git/bin/authors
  branch-age  = !.git/bin/branch-age
  brlog       = !.git/bin/brlog
  ctags       = !.git/hooks/ctags
  verbs       = !.git/bin/verbs

[push]
	default = tracking
	followTags = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@lab.unomaly.net:"]
	insteadOf = https://lab.unomaly.net/
[pull]
	rebase = true
[github]
	user = thiderman
[credential "https://lab.unomaly"]
	com = thiderman
