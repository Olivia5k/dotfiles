#!/bin/zsh

wmraise main@$HOST
tmux select-window -t main:2

# Check to see if we should do a low split or a normal one
if [[ $(tmux display -p '#{window_width}') -ge 160 ]]; then
  wide=true
else
  wide=false
fi

cur=$(tmux display -p '#P')
if [[ $cur == 2 ]] || ! $wide && [[ $cur == 1 ]]; then
  # Already on alternate terminal, kill it and go back
  tmux kill-pane
  tmux select-pane -t 0

  # Send enter if we are in wide mode
  $wide && tmux send-keys enter
elif [[ $(tmux display -p '#{window_panes}') == 1 ]] ; then
  # Just one window - split unto the main alternate
  $wide && cmd="h" || cmd="v"
  tmux split-window -$cmd -c '#{pane_current_path}' -p 35
elif $wide && [[ $(tmux display -p '#{window_panes}') == 2 ]] ; then
  # One alternate pane, split to the next one.
  tmux select-pane -t 1
  tmux split-window -v -c '#{pane_current_path}' -p 90
else
  # Focus the alternate pane
  $wide && idx=2 || idx=1
  tmux select-pane -t $idx
fi

tmux rename-window dev
sleep 0.5 && tmux rename-window dev
