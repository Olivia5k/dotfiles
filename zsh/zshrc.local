# ZLE hax0r navigation
function _inline-updir() {
  pushd -q ..
  _inline-precmd
}
function _inline-back() {
  if ! popd -q; then
    zle -M 'Directory stack empty'
    sleep 0.5
  fi
  _inline-precmd
}
function _inline-ls() {
  echo
  ls
  zle .reset-prompt
}
function _inline-gs() {
  echo
  git status
  zle .reset-prompt
}

function _inline-precmd() {
  _autovenv
  _find_git_root
  zle .reset-prompt
}


