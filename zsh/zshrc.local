# Use kicker as a Ctrl-O operator
kicker-command-line() {
    [[ -z $BUFFER ]] && zle up-history
    if [[ $BUFFER != kicker\ * ]]; then
        BUFFER="kicker -ce \"$BUFFER\""
        CURSOR=$(( CURSOR+12 ))
    fi
    _zsh_highlight
}
