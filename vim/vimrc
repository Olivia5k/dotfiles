" Kill trailing whitespace {{{

function! KillTrailingWhitespace(...)
  let pos=getpos('.')
  silent! %s/\s\+$//e
  if a:0
    " If arguments are given, kill trailing lines at the bottom of the file
    silent! %s/\v\n+%$//e
  endif
  call setpos('.',pos)
endfunction

augroup trailing
  au!
  au BufWritePre * call KillTrailingWhitespace(1)
augroup END

