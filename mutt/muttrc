#=======================================================#
# Boring details
set realname = "Lowe Thiderman"
set from = "lowe.thiderman@mancx.com"
set use_from = yes
set envelope_from ="yes"

# Forward attachments
#set mime_forward=yes
#set mime_forward_rest=yes


# Use a signature
# set signature="~/.signature"

# Use msmtp rather than sendmail. Check that 
# the path is correct for your system:
set sendmail="/usr/bin/msmtp"

# If not set in ~/.bashrc:
set spoolfile = "$HOME/mail/"

# don't highlight the whole shebang
set arrow_cursor=no
#======================================================#
# Folders
set folder="$HOME/mail"      # Local mailboxes stored here
set record="+sent"           # Where to store sent messages
set postponed="+unsent"   # Where to store draft messages
set mbox_type=maildir        # Mailbox type
set move=no                  # Don't move mail from spool

#======================================================#
# Watch these mailboxes for new mail, useful only if 
# Procmail or Maildrop is used to sort mail.
#mailboxes 
#mailboxes `echo $(ls ~/mail | grep -v mail) mail`
mailboxes `for i in $(ls ~/mail); do readlink -f ~/mail/$i ; done | xargs echo`
#mailboxes ! +slrn +fetchmail +mutt
set sort_browser=alpha    # Sort mailboxes by alpha(bet)

#======================================================#
# What to show and order of headers
#ignore *
#unignore Date: From: User-Agent: X-Mailer X-Operating-System To: \
         #Cc: Reply-To: Subject: Mail-Followup-To:
#hdr_order Date: From: User-Agent: X-Mailer X-Operating-System To: \
        #Cc: Reply-To: Subject: Mail-Followup-To:
                       
#======================================================#
# which editor do you want to use? 
# vim of course!
set editor="vim -c 'set tw=70 et' '+/^$' " 
set edit_headers=yes      # See the headers when editing

#======================================================#
# Aliases

set alias_file = ~/.local/share/mutt/aliases # In their own file
source ~/.local/share/mutt/aliases           # Source them
set sort_alias=alias                              # Sort alphabetically

#======================================================#
# Macros
source ~/.mutt/macros
